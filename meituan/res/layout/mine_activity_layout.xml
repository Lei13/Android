<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:background="#F4F0F4" >

    <!-- 标题栏 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_background"
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_action_home"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="我的"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/mine_email_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:scaleType="center"
            android:clickable="true"
            android:src="@drawable/mine_email_selector" />
    </RelativeLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FCFCFC"
        android:padding="15dp" >

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@drawable/ic_mt_coupon"
            android:gravity="center"
            android:layout_marginRight="1dp"
            android:text="美团劵" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:button="@drawable/ic_user_main_favorite"
        android:gravity="center"
        android:text="我的收藏" />
    </RadioGroup>

    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="15dp"
        android:text="团购订单"
        android:drawablePadding="8dp"
        android:drawableLeft="@drawable/ic_group_order_enable"
        android:background="@drawable/mine_text_backgroud_selector"
        />
    
     <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1.5dp"
        android:padding="15dp"
        android:text="预定订单（电影选座，酒店预定）"
        android:drawablePadding="8dp"
        android:drawableLeft="@drawable/ic_reserve_order_enable"
        android:background="@drawable/mine_text_backgroud_selector"
        />
     
     <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="15dp"
        android:text="每日推荐"
        android:drawablePadding="8dp"
        android:drawableLeft="@drawable/ic_order_account_recommend_enable"
        android:drawableRight="@drawable/group_myhomepage_arrow_right"
        android:background="@drawable/mine_text_backgroud_selector"
        />
     
     <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="15dp"
        android:text="会员积分"
        android:drawablePadding="8dp"
        android:drawableLeft="@drawable/ic_menu_user_off"
        android:background="@drawable/mine_text_backgroud_selector"
        />
     
     <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1.5dp"
        android:padding="15dp"
        android:text="我的抽奖"
        android:drawablePadding="8dp"
        android:drawableLeft="@drawable/ic_order_lottery_enable"
        android:background="@drawable/mine_text_backgroud_selector"
        />

     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="1.5dp"
         android:background="@drawable/mine_text_backgroud_selector"
         android:drawableLeft="@drawable/ic_order_voucher_enabled"
         android:drawablePadding="8dp"
         android:padding="15dp"
         android:text="我的代金券" />

</LinearLayout>