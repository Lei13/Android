<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relative_layout_1"
     >
    
    <ImageView 
        android:id="@+id/image_meituan"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
      	android:scaleType="matrix"
        android:background="@drawable/meituan_image1"
        android:src="@drawable/ic_label_nobooking"/>
    
    <LinearLayout 
        android:layout_toRightOf="@id/image_meituan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:orientation="vertical"
        android:layout_alignBottom="@id/image_meituan"
        android:layout_alignTop="@id/image_meituan">
        <TextView 
            android:id="@+id/title_meituan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="芭菲盛宴"/>
        <TextView 
            android:id="@+id/content_meituan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textSize="14sp"
             android:textColor="@android:color/darker_gray"
             android:layout_marginTop="8dp"
            android:text="单人自助午餐，流连忘返 的美食"/>
        
        
        <LinearLayout 
            
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom">

            <TextView
                android:id="@+id/price_onsale_meituan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9.9元"
               />
            
            
            <TextView 
                android:id="@+id/price_all_meituan"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginLeft="5dp"
                />
            
            <TextView 
                android:id="@+id/score_meituan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="4.5分（880）"
                android:gravity="right"
                android:layout_marginLeft="10dp"
                
                />
        </LinearLayout>
    </LinearLayout>
    

</RelativeLayout>
