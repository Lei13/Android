<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <Button 
        android:id="@+id/send_notification_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发送通知"/>
    <Button 
        android:id="@+id/guide_notification_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="guide通知"/>
    <Button 
        android:id="@+id/update_notification_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="更新一条通知"/>
    <Button 
        android:id="@+id/defined_notification_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="自定义一条通知"/>
    
    <Button 
        android:id="@+id/bigview_notification_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="bigview通知"/>
    <Button 
        android:id="@+id/download_notification_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="下载通知"/>

</LinearLayout>
